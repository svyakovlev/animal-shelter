<?xml version="1.0"?>
<Questionnaire name="prolongation" interval="2">
    <Question label="client-id">
        <Content>Укажите идентификатор клиента</Content>
        <Check>^[\d]+$</Check>
        <Hint>Использовать можно только цифры</Hint>
    </Question>
    <Question label="pet-id">
        <Content>Укажите идентификатор питомца</Content>
        <Check>^[\d]+$</Check>
        <Hint>Использовать можно только цифры</Hint>
    </Question>
    <Question label="number">
        <Content>Укажите количество дней, насколько следует продлить испытательный срок</Content>
        <Check>^[1-9][0-9]?$</Check>
        <Hint>Можно указать от 1 до 99 дней</Hint>
    </Question>
    <Question label="message">
        <Content>Укажите причину продления</Content>
    </Question>
</Questionnaire>